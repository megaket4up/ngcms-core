{
    "name": "vponomarev/ngcms-core",
    "description": "Репозиторий файлов ядра NGCMS.",
    "type": "project",
    "keywords": [
        "ngcms",
        "ngcms-core"
    ],
    "homepage": "https://ngcms.ru",
    "readme": "README.md",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Vitaliy Ponomarev",
            "email": "github@vponomarev.me",
            "homepage": "https://github.com/vponomarev",
            "role": "Developer"
        }
    ],
    "support": {
        "forum": "https://ngcms.ru/forum",
        "issues": "https://github.com/vponomarev/ngcms-core/issues",
        "source": "https://github.com/vponomarev/ngcms-core"
    },
    "require": {
        "php": ">=7.2",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "lib-iconv": "*",
        "phpmailer/phpmailer": "6.*",
        "twig/twig": "^3.0",
        "michelf/php-markdown": "^1.9"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "NG\\": "engine/classes/"
        }
    },
    "autoload-dev": {},
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "source",
        "vendor-dir": "vendor"
    },
    "extra": {}
}
